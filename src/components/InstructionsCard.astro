---
interface Props {
  Content: any;
}

const { Content } = Astro.props;
---

<div class="instructions-card card">
  <h2>Activity Instructions</h2>
  <div class="instructions-content">
    <Content />
  </div>
</div>

<style>
  .card {
    border: 2px solid #333;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  h2 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    color: #c41e3a;
    border-bottom: 2px solid #c41e3a;
    padding-bottom: 0.5rem;
  }

  .instructions-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #333;
  }

  .instructions-content :global(h2) {
    font-size: 1.375rem;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    color: #333;
    border-bottom: none;
    padding-bottom: 0;
  }

  .instructions-content :global(h3) {
    font-size: 1.25rem;
    margin-top: 1.25rem;
    margin-bottom: 0.75rem;
    color: #333;
  }

  .instructions-content :global(p) {
    margin-bottom: 1rem;
  }

  .instructions-content :global(ul),
  .instructions-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .instructions-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .instructions-content :global(strong) {
    font-weight: 600;
    color: #000;
  }

  .instructions-content :global(em) {
    font-style: italic;
  }

  .instructions-content :global(code) {
    background: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: monospace;
  }

  @media (min-width: 768px) {
    .card {
      padding: 2rem;
    }

    h2 {
      font-size: 1.75rem;
    }

    .instructions-content {
      font-size: 1.25rem;
    }

    .instructions-content :global(h2) {
      font-size: 1.5rem;
    }

    .instructions-content :global(h3) {
      font-size: 1.375rem;
    }
  }
</style>
