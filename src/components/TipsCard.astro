---
interface Props {
  tips?: string[];
}

const { tips } = Astro.props;
---

{tips && (
  <div class="tips-card card">
    <h2>Tips for Parents</h2>
    <ul class="tips-list">
      {tips.map((tip) => (
        <li class="tip-item">{tip}</li>
      ))}
    </ul>
  </div>
)}

<style>
  .card {
    border: 2px solid #333;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    background: #fff7e6;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  h2 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    color: #d97706;
    border-bottom: 2px solid #d97706;
    padding-bottom: 0.5rem;
  }

  .tips-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tip-item {
    padding: 0.75rem 0 0.75rem 2rem;
    font-size: 1.125rem;
    line-height: 1.6;
    color: #333;
    position: relative;
  }

  .tip-item::before {
    content: "ðŸ’¡";
    position: absolute;
    left: 0;
    font-size: 1.25rem;
  }

  @media (min-width: 768px) {
    .card {
      padding: 2rem;
    }

    h2 {
      font-size: 1.75rem;
    }

    .tip-item {
      font-size: 1.25rem;
      padding-left: 2.5rem;
    }

    .tip-item::before {
      font-size: 1.5rem;
    }
  }
</style>
